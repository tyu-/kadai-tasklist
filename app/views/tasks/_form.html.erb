<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク名：' %>
  <%= f.text_field :content %><BR>
  <%= f.label :term, '期限：' %>
  <%= f.date_select :term %><BR>
  <%= f.label :status, 'タスク状況：'%>
  <%= f.text_field :status %><BR>
  <!-- <%= f.select :status,[ ['簡単','簡単'],['普通','普通'],['大変','大変'],['炎上','炎上'] ] %><BR> -->
    
  <%= f.label :finish, '完了/未完了 ：' %>
  <%= f.check_box :finish %>※完了したらチェックをつけること！<BR>
  <BR>
  <%= f.submit '更新' %>
<% end %>