<h1>id:<%= @task.id %>のメッセージ詳細ページ</h1>

<div class="row">
  <div class="col-xs-8">
    <table class="table table-bordered">
      <tr>
        <th>タスク名</th>
        <td><%= @task.content %></td>
      </tr>
    
      <tr>
        <th>タスク期限</th>
        <td><%= @task.term %></td>
      </tr>
    
      <tr>
        <th>タスク状況</th>
        <td><%= @task.status %></td>
      </tr>
    
      <tr>
        <th>完了or未完了</th>
        <td>
          <% if @task.finish then%>
            <%= p "完了" %>
          <% else %>
            <%= p "未完了" %>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

<%= link_to 'このメッセージを編集する', edit_task_path(@task), class:'btn btn-default' %>
<%= link_to 'このメッセージを削除する', @task,method: :delete, data: {confirm:'本当に削除してよろしいですか？' }, class:'btn btn-danger' %>